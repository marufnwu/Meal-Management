<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SubmitPurchaseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmitPurchase"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/PowderBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryTransparent"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="2022-03-06 Wednesday"
            android:textColor="@color/White"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:paddingBottom="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:gravity="center"
                    android:background="@color/Bisque"
                    android:layout_margin="@dimen/_8sdp"
                    android:id="@+id/layoutCheckboxProductList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkboxProductList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:text="Using Product List"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>

               <FrameLayout
                   android:layout_above="@+id/layoutCheckboxDepositToAcc"
                   android:layout_below="@id/layoutCheckboxProductList"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:visibility="gone"
                       android:id="@+id/layoutDescription"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <EditText
                           android:id="@+id/edtPrice"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="@dimen/_8sdp"
                           android:background="@drawable/edittext_meal"
                           android:hint="Price"
                           android:inputType="numberDecimal"
                           android:textColor="@color/Black"
                           android:textSize="@dimen/_14sdp" />

                       <EditText
                           android:id="@+id/edtDesc"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="@dimen/_8sdp"
                           android:background="@drawable/edittext_meal"
                           android:hint="Product Description"
                           android:minEms="@integer/material_motion_duration_medium_2"
                           android:minLines="3"
                           android:textColor="@color/Black"
                           android:textSize="@dimen/_14sdp" />
                   </LinearLayout>

                   <RelativeLayout
                       android:id="@+id/layoutList"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="@dimen/_8sdp"
                       android:orientation="vertical">



                       <androidx.cardview.widget.CardView
                           android:layout_marginBottom="@dimen/_8sdp"
                           android:layout_above="@+id/layoutAddItem"
                           app:cardCornerRadius="@dimen/_5sdp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <LinearLayout
                               android:orientation="vertical"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <TextView
                                   android:id="@+id/txtTotalPurchase"
                                   android:textColor="@color/White"
                                   android:background="@color/colorPrimaryTransparent"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/_14sdp"
                                   android:padding="@dimen/_6sdp"
                                   android:gravity="center"
                                   android:text="Total Purchase: 00 "
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"/>

                               <FrameLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <androidx.recyclerview.widget.RecyclerView
                                       android:visibility="gone"
                                       android:id="@+id/recyProducts"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent" />


                                   <TextView
                                       android:id="@+id/txtEmpty"
                                       android:layout_gravity="center"
                                       android:textSize="@dimen/_12sdp"
                                       android:textStyle="bold"
                                       android:textColor="@color/colorPrimary"
                                       android:text="No purchase item added"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"/>

                               </FrameLayout>

                           </LinearLayout>
                       </androidx.cardview.widget.CardView>



                       <LinearLayout
                           android:id="@+id/layoutAddItem"
                           android:layout_alignParentBottom="true"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <androidx.cardview.widget.CardView
                               android:elevation="@dimen/_20sdp"
                               app:cardCornerRadius="@dimen/_8sdp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <LinearLayout
                                   android:padding="@dimen/_5sdp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <EditText
                                       android:id="@+id/edtSingleName"
                                       android:textColor="@color/Black"
                                       android:hint="Product Name"
                                       android:layout_marginEnd="@dimen/_1sdp"
                                       android:layout_weight="3"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"/>

                                   <EditText
                                       android:textColor="@color/Black"
                                       android:id="@+id/edtSinglePrice"
                                       android:inputType="number"
                                       android:gravity="center"
                                       android:hint="Price"
                                       android:layout_marginEnd="@dimen/_1sdp"
                                       android:layout_weight="2"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"/>

                                   <ImageView
                                       android:id="@+id/imgAddPurchase"
                                       android:padding="@dimen/_3sdp"
                                       android:src="@drawable/plus"
                                       android:layout_width="@dimen/_30sdp"
                                       android:layout_height="@dimen/_30sdp"/>
                               </LinearLayout>
                           </androidx.cardview.widget.CardView>
                       </LinearLayout>


                   </RelativeLayout>



               </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/Bisque"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:id="@+id/layoutCheckboxDepositToAcc"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkboxDepositToAcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text="Request Deposit to your account"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:id="@+id/radioGroupPurchaseType"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:checked="true"
                                android:id="@+id/radioBtnMealPurchase"
                                android:text="Meal Purchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <RadioButton
                                android:id="@+id/radioBtnOtherPurchase"
                                android:text="Other Purchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RadioGroup>
                    </LinearLayout>


                </LinearLayout>




            </RelativeLayout>




        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmitPurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/button_primary"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="Submit Your Purchase"
        android:textColor="@color/White" />


</RelativeLayout>