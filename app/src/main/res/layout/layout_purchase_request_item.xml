<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="@dimen/_3sdp"
        android:paddingTop="@dimen/_3sdp"
        android:background="@color/Azure"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="12-12-1997"
            android:textColor="@color/Black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:textSize="@dimen/_11sdp"
            android:id="@+id/txtName"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="@dimen/_3sdp"
            android:text="Maruf Ahmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/_11sdp"
            android:id="@+id/txtTotalPrice"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:text="000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_baseline_arrow_drop_down_black" />
    </LinearLayout>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:visibility="visible"
        android:id="@+id/layoutInfo"
        android:background="@color/FloralWhite"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/webProductList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <TextView
            android:id="@+id/txtIsDeposit"
            android:gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="Lulu requested to deposit money to his/her account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/checkBoxDeposit"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@color/Beige"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center"
            android:text="Deposit to user account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <RadioGroup
            android:gravity="center"
            android:id="@+id/rGroupPurchaseType"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textStyle="bold"
                android:layout_margin="@dimen/_4sdp"
                android:id="@+id/rButtonMealPurchase"
                android:text="Meal Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:textStyle="bold"
                android:layout_margin="@dimen/_4sdp"
                android:id="@+id/rButtonOtherPurchase"
                android:text="Other Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutAction"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/White"
                android:id="@+id/btnReject"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:background="@color/Red"
                android:layout_margin="@dimen/_4sdp"
                android:text="Reject"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/White"
                android:id="@+id/btnAccept"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:background="@color/Green"
                android:layout_margin="@dimen/_4sdp"
                android:text="Accept"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>