<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MembersActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@drawable/bottom_curve"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/hubballi"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/LightBlue"
                    android:text="March 2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:background="@drawable/curve_line_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"/>

                <LinearLayout
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/Gold"
                            android:text="@string/total_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtMember"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/WhiteSmoke"
                            android:text="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:background="@drawable/curve_line_white"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_3sdp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp" />

        </LinearLayout>




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:background="@color/colorPrimary"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/baseline_add_circle_24"
            android:contentDescription="Add New User"
            android:layout_margin="16dp" />
    </FrameLayout>





</LinearLayout>