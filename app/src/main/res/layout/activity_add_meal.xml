<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".ui.AddMealActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bottom_curve"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtMonthYear"
                android:layout_gravity="center"
                android:fontFamily="@font/hubballi"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/LightBlue"
                android:text="March 2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:background="@drawable/curve_line_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"/>

            <LinearLayout
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/_8sdp"
            android:background="@color/PowderBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDate"
                android:textColor="@color/White"
                android:background="@color/colorPrimaryTransparent"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:text="2022-03-06 Wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/primary_color_transparent_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtInstruction"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"
                        android:text="@string/initiate_member_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerMember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp" />
                </RelativeLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:padding="@dimen/_4sdp"
                            android:background="@color/DarkSeaGreen"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/White"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp"
                                android:text="Breakfast"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:textColor="@color/Black"
                                android:id="@+id/edtBreakfast"
                                android:inputType="numberDecimal"
                                android:background="@drawable/edittext_meal"
                                android:gravity="center"
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:padding="@dimen/_4sdp"
                            android:background="@color/LightSalmon"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/White"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp"
                                android:text="Lunch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:textColor="@color/Black"
                                android:id="@+id/edtLunch"
                                android:inputType="numberDecimal"
                                android:background="@drawable/edittext_meal"
                                android:gravity="center"
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:padding="@dimen/_4sdp"
                            android:background="@color/LightSeaGreen"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/White"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp"
                                android:text="Dinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:textColor="@color/Black"
                                android:id="@+id/edtDinner"
                                android:inputType="numberDecimal"
                                android:background="@drawable/edittext_meal"
                                android:gravity="center"
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddMeal"
                    android:layout_gravity="center"
                    android:textColor="@color/White"
                    android:paddingEnd="@dimen/_20sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:background="@drawable/button_primary"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="Add Meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


        <com.logicline.mydining.utils.Ad.MyDiningNativeAd
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>