<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SummaryActivity">

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:background="@drawable/bottom_curve"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <com.logicline.mydining.ui.custom_views.MonthPickerView
            android:id="@+id/monthPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_margin="@dimen/_8sdp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_purchase"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalPurchase"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:id="@+id/layoutFund"
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_fund_added"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalFund"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/Azure"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_meal"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalMeal"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/meal_charge"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/mealCharge"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_meal_cost"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalMealCost"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_deposit"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalDeposit"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/Azure"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/other_cost"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/otherCost"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/total_cost"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/totalCost"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
               <LinearLayout
                   android:background="@color/WhiteSmoke"
                   android:padding="@dimen/_4sdp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:gravity="center"
                       android:text="@string/in_reserved"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/inReserved"
                       android:textColor="@color/Black"
                       android:textSize="@dimen/_14sdp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="00" />

               </LinearLayout>
           </LinearLayout>

           <com.logicline.mydining.utils.Ad.MyDiningNativeAd
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>


           <androidx.recyclerview.widget.RecyclerView
               android:layout_marginTop="@dimen/_8sdp"
               android:id="@+id/recySummary"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>


       </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>